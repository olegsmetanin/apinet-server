{
	"$schema": "http://json-schema.org/draft-03/schema",
    "id": "AGO.Core.Filters.ModelFilterNode",
    "type": "object",
    "properties": {
        "path": { "type": ["string", "null"] },
		"not": { "type": "boolean" },
        "op": {
            "enum": [
                "&&",
                "||"
            ]
        },
        "items": {
            "type": "array",
            "items": {
                "type": "object",
                "oneOf": [
                    { "$ref": "AGO.Core.Filters.ModelFilterNode" },
                    { "$ref": "AGO.Core.Filters.ValueFilterNode" }
                ]
            }
        }
    },
    "requires": "op",
    "additionalProperties": false
}
@model AGO.WebApiApp.Controllers.SysConfigData
		   
// Production section begin

sysConfig = {
    src: function(path) {
		return '@Model.SrcPath/' + path;
    },
    site: function(path) {
		return '@Model.SitePath' + path;
    },
    modules: {},
    module: "@Model.Module",
	project: "@Model.Project",
    lang: getLang(),
	supportedLocales: sysConfig.supportedLocales
};

var modules = ["components", "core", sysConfig.module];

for (var i = 0; i < modules.length; i++) {
    sysConfig.modules[modules[i]] = {
        css: [modules[i] + "/assets/styles.min.css"],
        js: [
            modules[i] + "/" + modules[i] + ".min.js",
            modules[i] + "/" + modules[i] + "." + sysConfig.lang + ".js"
        ]
    }
}

LoadResources(function() {
    angular.element(document).ready(function() {

        angular.module("core")
            .constant('currentProject', '@Model.Project') //TODO remove, if project in sysConfig enough
            .constant("userGroups", [])
            .constant("sysConfig", sysConfig); // important to get empty string!

        angular.bootstrap(document, ["core", sysConfig.module]);
    });
});

// Production section end
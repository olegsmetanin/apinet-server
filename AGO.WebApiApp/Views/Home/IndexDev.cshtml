var sysConfig = {
    src: function(path) {
        return "../src/" + path
    },
    site: function(path) {
        return "../" + path
        // Production mode
        // return "../dist/" + path
    },
	modules: { },
	module: "home",
    lang: getLang()
};

yepnope({
    load: [sysConfig.src('components/include.js'), sysConfig.src('components/include.' + sysConfig.lang + '.js'), sysConfig.src('core/include.js'), sysConfig.src('backend/include.js'), sysConfig.src(sysConfig.module + '/include.js')],
    complete: function() {

        sysConfig.modules['core'].js.push('src/core/lang/core.' + sysConfig.lang + '.js');
        sysConfig.modules[sysConfig.module].js.push('src/' + sysConfig.module + '/lang/' + sysConfig.module + '.' + sysConfig.lang + '.js')

        LoadResources(function() {
            angular.element(document).ready(function() {

                angular.module('core.templates', []);
                angular.module(sysConfig.module + '.templates', []);

                angular.module('core').constant('currentProject', 'play2').constant('userGroups', []).constant('sysConfig', sysConfig);

                angular.bootstrap(document, ['backend', 'core', sysConfig.module]);
            });
        });
    }
});

